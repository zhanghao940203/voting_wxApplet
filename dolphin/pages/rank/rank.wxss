.top{
  position: fixed;
  top: 0%;
  left: 0%;
  width:100%;
  background-color:rgb(255, 255, 255);
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1rpx solid #CCC;
  margin-bottom:1rpx
}
.rank{
  background-color:#f3f3f3;
}
.title{
  text-align: center;
  color: rgb(52, 188, 252);
  font-size: 50rpx;
  font-weight: bold
}
.divLine{
  background: #fff;
  width: 100%;
  height: 10rpx;
}
.balance{
  position: fixed;
  top: 0%;
  left: 0%;
  display: flex;
  justify-content: center;
  /* border-bottom: 1rpx solid #CCC;
