.works{
    height:200rpx;
    width:100%;
    background-color:rgb(255, 255, 255);
    opacity:0.9;
    border: 10rpx solid #f3f3f3;
    display: flex;
    align-items: center;
    flex-direction: row;
}
.photo{
    height:150rpx;
    width:150rpx;
    border-radius: 100%;
}
.intro{
    display: flex;
    flex-direction: column;
    position: absolute; 
    left:180rpx;
}
.userinfo{
    padding:40rpx;
    font-size: 35rpx;
    font-weight: bold;
    text-align: left;
    display: flex;
    flex-direction: row;
}
.score{
    font-size: 25rpx;
    text-align: left;
    position: absolute;
    right:5%;
}
.deny{
  width:100%;
  height:600px;
}

